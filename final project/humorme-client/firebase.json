{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/apps/**/reviews",
        "destination": "/apps/[id]/reviews.html"
      },
      {
        "source": "/apps/**",
        "destination": "/apps/[id].html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
