{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/apps/**/reviews",
        "destination": "/apps/[id]/reviews.html"
      },
      {
        "source": "/apps/**",
        "destination": "/apps/[id].html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "firestore": {
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "emulators": {
    "singleProjectMode": true,
    "ui": {
      "enabled": true
    },
    "functions": {
      "host": "localhost",
      "port": 5001
    },
    "hosting": {
      "port": 5002
    },
    "auth": {
      "port": 9099,
      "host": "127.0.0.1"
    },
    "storage": {
      "port": 9199
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 8080
    }
  }
}
